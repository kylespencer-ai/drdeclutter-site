{
  "$schema": "https://staticwebapp.azureedge.net/schema/v2021-03-01.json",
  "routes": [
    {
      "route": "/.*",
      "allowedRoles": ["anonymous"],
      "serve": "/index.html"
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html"
  },
  "responseOverrides": {
    "404": {
      "redirect": "/index.html",
      "statusCode": 301
    }
  },
  "redirects": [
    {
      "source": "/(.*)",
      "destination": "https://www.drdeclutter.co.uk/$1",
      "redirectType": "301",
      "conditions": [
        {
          "name": "host",
          "match": "drdeclutter.co.uk",
          "operator": "equals",
          "ignoreCase": true
        }
      ]
    }
  ]
}
